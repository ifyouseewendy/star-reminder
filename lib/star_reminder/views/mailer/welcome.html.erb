<% payload = @payload %>

<p>Hi there,</p>
<p>This is your Github Star Reminder. Meet your serendipity.</p>

<div class="stars">
  <% payload.each do |star| %>
      <div class="star">
        <div class="star-item">
          <h3>
            <%= link_to star.values_at("owner", "name").join(" / "), star["html_url"] %>
          </h3>
        </div>
        <div class="star-item">
          <p class="star-desc">
            <%= star["description"] %>
          </p>
        </div>
        <div class="star-item">
          <span class="star-tag">
            <% lang = star["language"] %>
            <span class="star-language-color star-icon" style="background-color: <%= colors[lang]['color'] %>">
            </span>
            <%= lang %>
          </span>
          <span class="star-tag">
            <%= octicon "star", "aria-label": "star", fill: "#586069", class: "star-icon" %>
            <%= star["stargazers_count"] %>
          </span>
          <span class="star-tag">
            <%= octicon "repo-forked", "aria-label": "repo-forked", fill: "#586069", class: "star-icon" %>
            <%= star["forks_count"] %>
          </span>
          <span class="star-tag">
            Updated <%= time_ago_in_words star["updated_at"] %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
